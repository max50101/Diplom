<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/seriaaCardView"
        android:layout_width="192dp"
        android:layout_height="152dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aplCardView"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"

            android:layout_height="150dp">

            <ImageView
                android:id="@+id/seriaaIm"
                android:layout_width="190dp"
                android:layout_height="91dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/seriaa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/seriaAName"
                android:layout_width="166dp"
                android:layout_height="26dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Serie A"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seriaaIm" />

            <TextView
                android:id="@+id/Italy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="Italy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seriaAName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/aplCardView"
        android:layout_width="192dp"
        android:layout_height="152dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/seriaaCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"

            android:layout_height="150dp">

            <ImageView
                android:id="@+id/aplIm"
                android:layout_width="190dp"
                android:layout_height="91dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/apl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/aplName"
                android:layout_width="166dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="English Premier League"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aplIm" />

            <TextView
                android:id="@+id/england"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:text="England"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aplName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Choose League"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bundesligaCardView"
        android:layout_width="192dp"
        android:layout_height="152dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/laligaCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aplCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"

            android:layout_height="150dp">

            <ImageView
                android:id="@+id/bundesligaIm"
                android:layout_width="185dp"
                android:layout_height="94dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/bundes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bundeligaName"
                android:layout_width="166dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Bundesliga 1"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bundesligaIm" />

            <TextView
                android:id="@+id/germany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="71dp"
                android:text="Germany"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bundeligaName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/laligaCardView"
        android:layout_width="192dp"
        android:layout_height="152dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bundesligaCardView"
        app:layout_constraintTop_toBottomOf="@+id/seriaaCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"

            android:layout_height="150dp">

            <ImageView
                android:id="@+id/laligaIm"
                android:layout_width="190dp"
                android:layout_height="91dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/laliga"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/laligaName"
                android:layout_width="166dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="La Liga"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/laligaIm" />

            <TextView
                android:id="@+id/spain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="Spain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/laligaName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rplCardView"
        android:layout_width="192dp"
        android:layout_height="152dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ligueOneCarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bundesligaCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"

            android:layout_height="150dp">

            <ImageView
                android:id="@+id/rpldIm"
                android:layout_width="190dp"
                android:layout_height="91dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/rpl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rplName"
                android:layout_width="166dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Russian Premier Ligue"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rpldIm" />

            <TextView
                android:id="@+id/Russia"
                android:layout_width="44dp"
                android:layout_height="18dp"
                android:layout_marginStart="72dp"
                android:text="Russia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rplName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ligueOneCarView"
        android:layout_width="192dp"
        android:layout_height="152dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rplCardView"
        app:layout_constraintTop_toBottomOf="@+id/laligaCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"

            android:layout_height="150dp">

            <ImageView
                android:id="@+id/ligueOneIm"
                android:layout_width="190dp"
                android:layout_height="91dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ligueone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ligueOneName"
                android:layout_width="166dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Ligue 1"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ligueOneIm" />

            <TextView
                android:id="@+id/france"
                android:layout_width="44dp"
                android:layout_height="18dp"
                android:layout_marginStart="72dp"
                android:text="France"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ligueOneName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="154dp"
        android:src="@drawable/ball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rplCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>